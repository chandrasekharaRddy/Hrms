ateLeave() {\r\n      try {\r\n        const response = await this.$http.post('/api/User/createleave', {\r\n          leaveType: this.leaveType,\r\n          startDate: this.startDate,\r\n          endDate: this.endDate,\r\n          status: this.status,\r\n          emp_name:this.name,\r\n          email:this.email\r\n        });\r\n        console.log('Leave created successfully:', response.data);\r\n        this.fetchLeaveBalances();\r\n      } catch (error) {\r\n        console.error('Failed to create leave:', error.response.data);\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n"],"mappings":"AA4SA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,SAAS,EAAE,EAAE;MACbC,OAAO,EAAE,EAAE;MACXC,MAAM,EAAE,EAAE;MACVC,UAAU,EAAE,CAAC;MACbC,YAAY,EAAE,CAAC;MACfC,IAAI,EAAC,EAAE;MACPC,KAAK,EAAC;IACR,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,kBAAkB,CAAC,CAAC;EAC3B,CAAC;EACDC,OAAO,EAAE;IACP,MAAMD,kBAAkBA,CAAA,EAAG;MACzB,IAAI;QACF,MAAME,QAAO,GAAI,MAAM,IAAI,CAACC,KAAK,CAACC,GAAG,CAAC,oBAAoB,CAAC;QAC3D,IAAI,CAACT,UAAS,GAAIO,QAAQ,CAACZ,IAAI,CAACe,gBAAgB;QAChD,IAAI,CAACT,YAAW,GAAIM,QAAQ,CAACZ,IAAI,CAACgB,kBAAkB;MACtD,EAAE,OAAOC,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,iCAAiC,EAAEA,KAAK,CAAC;MACzD;IACF,CAAC;IACD,MAAME,WAAWA,CAAA,EAAG;MAClB,IAAI;QACF,MAAMP,QAAO,GAAI,MAAM,IAAI,CAACC,KAAK,CAACO,IAAI,CAAC,uBAAuB,EAAE;UAC9DnB,SAAS,EAAE,IAAI,CAACA,SAAS;UACzBC,SAAS,EAAE,IAAI,CAACA,SAAS;UACzBC,OAAO,EAAE,IAAI,CAACA,OAAO;UACrBC,MAAM,EAAE,IAAI,CAACA,MAAM;UACnBiB,QAAQ,EAAC,IAAI,CAACd,IAAI;UAClBC,KAAK,EAAC,IAAI,CAACA;QACb,CAAC,CAAC;QACFU,OAAO,CAACI,GAAG,CAAC,6BAA6B,EAAEV,QAAQ,CAACZ,IAAI,CAAC;QACzD,IAAI,CAACU,kBAAkB,CAAC,CAAC;MAC3B,EAAE,OAAOO,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,yBAAyB,EAAEA,KAAK,CAACL,QAAQ,CAACZ,IAAI,CAAC;MAC/D;IACF;EACF;AACF,CAAC"},"metadata":{},"sourceType":"module","externalDependencies":[]}