 leaveType: 'Normal Leave',\r\n      startDate: '',\r\n      endDate: '',\r\n      reason: ''\r\n    };\r\n  },\r\n  mounted() {\r\n    // Fetch remaining leave balances on component mount\r\n    this.fetchRemainingLeaveBalances();\r\n  },\r\n  methods: {\r\n    async fetchRemainingLeaveBalances() {\r\n      try {\r\n        // Make API request to fetch remaining leave balances\r\n        const response = await this.$axios.get('/api/user/leavebalances');\r\n        this.normalLeaveBalance = response.data.normalLeaveBalance;\r\n        this.sickLeaveBalance = response.data.sickLeaveBalance;\r\n      } catch (error) {\r\n        console.error('Error fetching remaining leave balances:', error);\r\n        // Handle error\r\n      }\r\n    },\r\n    async submitLeaveRequest() {\r\n      try {\r\n        // Prepare leave request data\r\n        const leaveRequestData = {\r\n          leaveType: this.leaveType,\r\n          startDate: this.startDate,\r\n          endDate: this.endDate,\r\n          reason: this.reason\r\n        };\r\n\r\n        // Make API request to create leave request\r\n        const response = await this.$axios.post('/api/user/createleave', leaveRequestData);\r\n        console.log('Leave request created:', response.data);\r\n        // Optionally, show success message or redirect to another page\r\n      } catch (error) {\r\n        console.error('Error creating leave request:', error);\r\n        // Handle error\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n"],"mappings":"AAkTA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,kBAAkB,EAAE,CAAC;MACrBC,gBAAgB,EAAE,CAAC;MACnBC,SAAS,EAAE,cAAc;MACzBC,SAAS,EAAE,EAAE;MACbC,OAAO,EAAE,EAAE;MACXC,MAAM,EAAE;IACV,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR;IACA,IAAI,CAACC,2BAA2B,CAAC,CAAC;EACpC,CAAC;EACDC,OAAO,EAAE;IACP,MAAMD,2BAA2BA,CAAA,EAAG;MAClC,IAAI;QACF;QACA,MAAME,QAAO,GAAI,MAAM,IAAI,CAACC,MAAM,CAACC,GAAG,CAAC,yBAAyB,CAAC;QACjE,IAAI,CAACX,kBAAiB,GAAIS,QAAQ,CAACV,IAAI,CAACC,kBAAkB;QAC1D,IAAI,CAACC,gBAAe,G